<% if flash.any? %>
  <div class="mb-4">
    <% flash.each do |type, message| %>
      <% alert_class = type == "notice" ? "bg-green-100 border border-green-400 text-green-700" : "bg-red-100 border border-red-400 text-red-700" %>
      <div class="<%= alert_class %> px-4 py-3 rounded relative" role="alert">
        <p><%= message %></p>
      </div>
    <% end %>
  </div>
<% end %>
