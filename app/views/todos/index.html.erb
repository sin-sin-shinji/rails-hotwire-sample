<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">未対応のTodo一覧</h1>
    <%= link_to "新規追加", new_todo_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded", data: { turbo_frame: :remote_modal } %>
  </div>

  <div id="flash">
    <%= render "flash" %>
  </div>

  <div id="todos-container" class="bg-white shadow-md rounded-lg overflow-hidden">
    <%= render "todo_list", todos: @todos %>
  </div>
</div>
