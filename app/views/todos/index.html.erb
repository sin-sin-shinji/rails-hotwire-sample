<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">未対応のTodo一覧</h1>
    <%= link_to "新規追加", new_todo_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded" %>
  </div>

  <div id="flash">
    <%= render "flash" %>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <% if @todos.present? %>
      <%= turbo_frame_tag "todo-list" do %>
        <ul class="divide-y divide-gray-200">
          <% @todos.each do |todo| %>
            <%= turbo_frame_tag todo do %>
              <li class="p-4 hover:bg-gray-50" id="todo-<%= todo.id %>" aria-label="Todo: <%= todo.title %>">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-medium text-gray-900"><%= todo.title %></h3>
                    <% if todo.description.present? %>
                      <p class="mt-1 text-sm text-gray-600"><%= todo.description %></p>
                    <% end %>
                  </div>
                  <div class="ml-4 flex space-x-3">
                    <%= link_to "更新", edit_todo_path(todo), class: "text-blue-600 hover:text-blue-800" %>
                    <%= button_to "対応完了",
                        complete_todo_path(todo),
                        method: :patch,
                        class: "text-green-600 hover:text-green-800 bg-transparent border-none cursor-pointer",
                        data: {
                          turbo_confirm: "「#{todo.title}」を対応完了に変更しますか？",
                          turbo_stream: true
                        }
                    %>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    <% else %>
      <div class="p-4 text-center text-gray-500">
        未対応のTodoはありません
      </div>
    <% end %>
  </div>
</div>
